@model Medication


@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-controller="Home" asp-action="Edit" method="post" class="mt-3">
    <h2>Update Medication Information</h2> 
    
    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control" placeholder="Medication Name" />
            <span asp-validation-for="Dose" class="text-danger">@Model.Name</span>
        </div>
    </div>
    
    <div class="form-group row">
        <label asp-for="Dose" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Dose" class="form-control" placeholder="Medication Dose" />
            <span asp-validation-for="Dose" class="text-danger">@Model.Dose</span>
        </div>
    </div>
    
    <div class="form-group row">
            <label asp-for="Administer" class="col-sm-2 col-form-label">Time To Take</label>
            <div class="col-sm-10">
                <select asp-for="Administer"
                        asp-items="Html.GetEnumSelectList<TakeTime>()"> </select>
                <span asp-validation-for="Administer" class="text-danger">@Model.Administer</span>
            </div>
        </div>
    
        <div class="form-group row">
            <label asp-for="Prescribed" class="col-sm-2 col-form-label">Prescribed Date</label>
            <div class="col-sm-10">
                <input asp-for="Prescribed" class="form-control" placeholder="Prescription Date" />
                <span asp-validation-for="Prescribed" class="text-danger">@Model.Prescribed</span>
            </div>
        </div>
    
        <div class="form-group row">
            <label asp-for="Refills" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <select asp-for="Refills"
                        asp-items="Html.GetEnumSelectList<Count>()" ></select>
                <span asp-validation-for="Refills" class="text-danger">@Model.Refills</span>
            </div>
        </div>
    
        <div class="form-group row">
            <label asp-for="Prescriber" class="col-sm-2 col-form-label">Prescriber/Doctor</label>
            <div class="col-sm-10">
                <input asp-for="Prescriber" class="form-control" placeholder="Medical Professional/Doctor Name" />
                <span asp-validation-for="Prescriber" class="text-danger">@Model.Prescriber</span>
            </div>
        </div>
    
    <div asp-validation-summary="All" , class="text-danger"></div>
    
    <div class="form-group row">
            <label asp-for="Prescriber" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Update</button>
            </div>
    </div>
    
</form>

